#!/usr/bin/env perl
#
# -*- perl -*-
#
# Show which version of the MCP is setup to boot.
#
# From iop, the "mcpVersion" command will tell you which version is
# actually running; this information is also available from the MCP Menu
#
$base="/p/mcpbase";

if (-d $base) {
	$dir = readlink("$base/etc");
	$dir =~ s|/etc$||;
	$dir =~ s|^.*/mcp/||;
    
	print "$dir\n";

	exit;
}
